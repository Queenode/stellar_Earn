generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- USERS ----------
model User {
  id             String   @id @default(uuid())
  stellarAddress String   @unique
  username       String?
  email          String?
  role           String   @default("USER")
  xp             Int      @default(0)
  level          Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  submissions    Submission[]
  notifications  Notification[]
  payouts        Payout[]
}

// ---------- QUESTS ----------
model Quest {
  id                String    @id @default(uuid())
  title             String
  description       String
  contractTaskId    String
  rewardAsset       String
  rewardAmount      Int
  deadline          DateTime?
  status            String    @default("ACTIVE")
  verifierType      String
  verifierConfig    Json
  createdBy         String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  submissions       Submission[]
}

// ---------- SUBMISSIONS ----------
model Submission {
  id               String    @id @default(uuid())
  questId          String
  userId           String
  proof            Json
  status           String    @default("PENDING")
  approvedBy       String?
  approvedAt       DateTime?
  rejectedBy       String?
  rejectedAt       DateTime?
  rejectionReason  String?
  verifierNotes    String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  quest            Quest     @relation(fields: [questId], references: [id])
  user             User      @relation(fields: [userId], references: [id])

  @@index([questId])
  @@index([userId])
  @@index([status])
}

// ---------- NOTIFICATIONS ----------
model Notification {
  id        String    @id @default(uuid())
  userId    String
  type      String
  title     String
  message   String    @db.Text
  metadata  Json?
  read      Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([read])
}

// ---------- PAYOUTS ----------
model Payout {
  id           String   @id @default(uuid())
  userId       String
  amount       Int
  asset        String
  status       String   @default("PENDING")
  transaction  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
}

// ---------- ANALYTICS SNAPSHOTS ----------
model AnalyticsSnapshot {
  id          String   @id @default(uuid())
  metric      String
  value       Float
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([metric])
  @@index([timestamp])
}
